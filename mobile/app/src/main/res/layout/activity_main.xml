<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center" android:padding="24dp">

    <TextView android:id="@+id/heartRate" android:text="-- BPM"
        android:textSize="32sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView android:id="@+id/riskLabel" android:text="Risk: --%"
        android:textSize="24sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button android:id="@+id/sosButton" android:text="SOS" android:layout_marginTop="24dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
